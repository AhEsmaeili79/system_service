# Redis Environment Configuration for Services Project
# Copy this file to .env and modify values as needed

# Redis Server Configuration
REDIS_PASSWORD=FAKE_PASSWORD_CHANGE_THIS_IN_PRODUCTION
REDIS_MAXMEMORY=512mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Redis Connection URLs for different services and use cases
# Format: redis://[:password@]host[:port][/database]

# Communication Service - Celery Configuration
REDIS_URL_CELERY_BROKER=redis://fake-redis-host.example.com:6379/0
REDIS_URL_CELERY_BACKEND=redis://fake-redis-host.example.com:6379/1

# Communication Service - Cache
REDIS_URL_COMM_CACHE=redis://fake-redis-host.example.com:6379/2

# User Service - General Cache and Sessions
REDIS_URL_USER_CACHE=redis://fake-redis-host.example.com:6379/3

# User Service - Rate Limiting
REDIS_URL_USER_RATELIMIT=redis://fake-redis-host.example.com:6379/4

# User Service - Token Blacklist
REDIS_URL_USER_BLACKLIST=redis://fake-redis-host.example.com:6379/5

# Split Service - Cache
REDIS_URL_SPLIT_CACHE=redis://fake-redis-host.example.com:6379/6

# Future Services - Reserved databases
# REDIS_URL_SERVICE_X_CACHE=redis://fake-redis-host.example.com:6379/7
# REDIS_URL_SERVICE_X_SESSIONS=redis://fake-redis-host.example.com:6379/8
# REDIS_URL_SERVICE_X_RATELIMIT=redis://fake-redis-host.example.com:6379/9

# Alternative format with password (uncomment and modify if using password)
# REDIS_URL_CELERY_BROKER=redis://:FAKE_PASSWORD_CHANGE_THIS_IN_PRODUCTION@fake-redis-host.example.com:6379/0
# REDIS_URL_CELERY_BACKEND=redis://:FAKE_PASSWORD_CHANGE_THIS_IN_PRODUCTION@fake-redis-host.example.com:6379/1
# REDIS_URL_COMM_CACHE=redis://:FAKE_PASSWORD_CHANGE_THIS_IN_PRODUCTION@fake-redis-host.example.com:6379/2
# REDIS_URL_USER_CACHE=redis://:FAKE_PASSWORD_CHANGE_THIS_IN_PRODUCTION@fake-redis-host.example.com:6379/3
# REDIS_URL_USER_RATELIMIT=redis://:FAKE_PASSWORD_CHANGE_THIS_IN_PRODUCTION@fake-redis-host.example.com:6379/4
# REDIS_URL_USER_BLACKLIST=redis://:FAKE_PASSWORD_CHANGE_THIS_IN_PRODUCTION@fake-redis-host.example.com:6379/5
# REDIS_URL_SPLIT_CACHE=redis://:FAKE_PASSWORD_CHANGE_THIS_IN_PRODUCTION@fake-redis-host.example.com:6379/6

# Redis Connection Pool Settings (can be used by applications)
REDIS_MAX_CONNECTIONS=20
REDIS_CONNECTION_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=yes
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SOCKET_KEEPALIVE=yes
REDIS_SOCKET_KEEPALIVE_OPTIONS=1
REDIS_HEALTH_CHECK_INTERVAL=30
