# RabbitMQ Environment Configuration
# Copy this file to .env and update the values as needed

# ===========================================
# RabbitMQ Credentials
# ===========================================
RABBITMQ_DEFAULT_USER=your_admin_username
RABBITMQ_DEFAULT_PASS=your_secure_admin_password
RABBITMQ_ERLANG_COOKIE=your_erlang_cookie_here

# ===========================================
# Service-Specific Credentials
# ===========================================
# User Service
RABBITMQ_USER_SERVICE_USER=your_user_service_username
RABBITMQ_USER_SERVICE_PASS=your_user_service_password

# Communication Service
RABBITMQ_COMMUNICATION_SERVICE_USER=your_communication_service_username
RABBITMQ_COMMUNICATION_SERVICE_PASS=your_communication_service_password

# Split Service
RABBITMQ_SPLIT_SERVICE_USER=your_split_service_username
RABBITMQ_SPLIT_SERVICE_PASS=your_split_service_password

# ===========================================
# Network Configuration
# ===========================================
RABBITMQ_AMQP_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ===========================================
# Performance Settings
# ===========================================
RABBITMQ_VM_MEMORY_HIGH_WATERMARK=0.6
RABBITMQ_DISK_FREE_LIMIT=1GB

# ===========================================
# Security Settings
# ===========================================
RABBITMQ_SSL_ENABLED=false
RABBITMQ_SSL_PORT=5671
RABBITMQ_SSL_MANAGEMENT_PORT=15671

# ===========================================
# Monitoring & Logging
# ===========================================
RABBITMQ_LOG_LEVEL=info
RABBITMQ_ENABLE_MANAGEMENT_UI=true

# ===========================================
# Clustering (for future scaling)
# ===========================================
RABBITMQ_CLUSTER_NODES=
RABBITMQ_CLUSTER_PARTITION_HANDLING=autoheal
